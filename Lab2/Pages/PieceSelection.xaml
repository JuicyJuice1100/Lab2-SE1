<Page x:Class="Lab2.Pages.PieceSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="PieceSelection">
    <StackPanel HorizontalAlignment="Center">
        <TextBox Style="{StaticResource Title}">Select Piece</TextBox>
        <Button Style="{StaticResource HomeButtons}" Click="Select" Tag="X">
            X
        </Button>
        <Button Name="O" Style="{StaticResource HomeButtons}" Click="Select" Tag="O">
            O
        </Button>
        <CheckBox x:Name="GoFirstCheckBox" Style="{StaticResource GoFirstCheck}" IsChecked="True">Go First?</CheckBox>
    </StackPanel>
</Page>
