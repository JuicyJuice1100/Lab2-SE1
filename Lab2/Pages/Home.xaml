<Page x:Class="Lab2.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab2"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Home">
    
    <StackPanel HorizontalAlignment="Center">
        <TextBox HorizontalAlignment="Center" FontWeight="Bold" FontSize="50">Tic-Tac-Toe</TextBox>
        <Button FontWeight="Bold" Height="200" Width="600" FontSize="50" Click="NewGame">
            New Game
        </Button>
        <Button FontWeight="Bold"   Height="200" Width="600" FontSize="50"  Click="LoadGame">
            Load Game
        </Button>
        <Button FontWeight="Bold" Height="200" Width="600" FontSize="50" Click="Exit">
            Exit
        </Button>
    </StackPanel>
</Page>
